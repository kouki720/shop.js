<%- include('parts/top.ejs')%>   
  
        <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container-fluid">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Products</a></li>
                    <li class="breadcrumb-item active">Wishlist</li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        <!-- Wishlist Start -->
        <div class="wishlist-page">
            <div class="container-fluid">
                <div class="wishlist-page-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>disponible Quantity</th>
                                            <th>Add to Cart</th>
                                            <th>Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody class="align-middle">
                                        <% if (wishlist.length > 0) { %>
                                            <% wishlist.forEach(product => { %>
                                        <tr>
                                            <td>
                                                <div class="img">
                                                    <a href="#"><img src="../img/<%= product.image %>" alt="Image"></a>
                                                    <p><%= product.nom %></p>
                                                </div>
                                            </td>
                                            <td><%= product.prix %>DT</td>
                                            <td>
                                                
                                                disponible Quantity for the moment: <input type="text" value="<%= product.quantite %>">  
                                                
                                            </td>
                                            <td>
                                                <a href="/wishlist-to-cart/<%= product._id %>" class="btn-cart">Add to Cart</a>
                                            </td>
                                            <td>
                                                <a href="/remove-from-wishlist/<%= product._id %>" class="btn-remove"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <p>Your wishlist is empty.</p>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Wishlist End -->
        
<%- include('parts/last.ejs')%>  